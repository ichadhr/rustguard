# Server Configuration
SERVER_ADDRESS=127.0.0.1
SERVER_PORT=8081

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/framework_db?schema=public

# Database Connection Pool Configuration (Performance Optimization)
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5
DB_ACQUIRE_TIMEOUT_SECONDS=30
DB_IDLE_TIMEOUT_SECONDS=600
DB_MAX_LIFETIME_SECONDS=1800

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_TTL_IN_MINUTES=30
JWT_MAX_AGE_SECONDS=1800

# Refresh Token Configuration
REFRESH_TOKEN_TTL_DAYS=30
# Options: true, false
REFRESH_TOKEN_ROTATION=true

# Fingerprint Configuration
FINGERPRINT_COOKIE_MAX_AGE_DAYS=30
FINGERPRINT_CLEANUP_INTERVAL_MINUTES=60

# Security Configuration
BCRYPT_COST=12

# Performance Configuration
MAX_REQUEST_SIZE_MB=10
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging Configuration
# Options: error, warn, info, debug, trace
LOG_LEVEL=info

# Environment Configuration
# Options: development, production/prod, test/testing
ENV=development